---
import Layout from '@layouts/root'
import Container from '@components/Container'
import Title from '@ui/Title'

const pageList = [{
  name: 'UI-kit',
  href: 'ui-kit.html',
}, {
  name: 'Главная',
  href: 'index.html',
}]
---

<Layout title="Список страниц">
  <main>
    <div class="sitemap">
      <Container
        mod="big"
      >
        <div class='sitemap__logo'>
          <img src='./svg/logo.svg' width={192} height={24} alt='лого' />
        </div>
        <Title
          title="Список страниц"
          size='m'
        />
        <ol>
          {pageList.map((item) => (
            <li>
              <a href={item.href}>{item.name}</a>
            </li>
          ))}
        </ol>
      </Container>
    </div>
  </main>
</Layout>

<style lang="scss">
.sitemap {
  width: 100%;
  height: 100%;
  min-height: 100vh;
  padding-top: 30px;

  background-color: var(--color-lavender);

  &__logo {
    margin-bottom: 30px;

    width: 100%;
    max-width: 300px;
    height: 80px;

    img {
      object-fit: contain;
      width: auto;
      height: 100%;
    }
  }

  ol {
    margin-top: 20px;
    padding-left: 20px;
    list-style: decimal;

    li {
      &:not(:last-child) {
        margin-bottom: 16px;
      }

      a {
        font-size: 18px;
        color: var(--color-fedora);
      }
    }
  }
}
</style>
