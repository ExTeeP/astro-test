---
import UIKitLayout from '@layouts/UI-kit/UI-kit'
import Title from '@ui/Title/Title'
import UiCode from '@ui/UiCode/UiCode'

const uiPageTitle = 'Заголовки'
---

<UIKitLayout title={uiPageTitle}>
  <section class="ui__section">
    <div class="ui-container">
      <div class="ui__component-wrap">
        <Title text="Заголовок первого уровня" as="h1" size="h1" />
        <UiCode
          code={'<Title text="Заголовок первого уровня" as="h1" size="xl" />'}
        />
      </div>

      <div class="ui__component-wrap">
        <Title text="Заголовок второго уровня" as="h2" size="h2" />
        <UiCode
          code={'<Title text="Заголовок второго уровня" as="h2" size="h2" />'}
        />
      </div>

      <div class="ui__component-wrap">
        <Title text="Заголовок третьего уровня" as="h3" size="h3" />
        <UiCode
          code={'<Title text="Заголовок третьего уровня" as="h3" size="h3" />'}
        />
      </div>
      <div class="ui__component-wrap">
        <Title text="Заголовок четвертого уровня" as="h4" size="h4" />
        <UiCode
          code={'<Title text="Заголовок четвертого уровня" as="h4" size="h4" />'}
        />
      </div>
      <div class="ui__component-wrap">
        <Title text="Заголовок пятого уровня" as="h5" size="h5" />
        <UiCode
          code={'<Title text="Заголовок пятого уровня" as="h5" size="h5" />'}
        />
      </div>
      <div class="ui__component-wrap">
        <Title text="Заголовок шестого уровня" as="h6" size="h6" />
        <UiCode
          code={'<Title text="Заголовок шестого уровня" as="h6" size="h6" />'}
        />
      </div>
      <div class="ui__component-wrap">
        <Title
          text="Заголовочный параграф, верхний регистр"
          as="p"
          size="h3"
          mods={['uppercase']}
        />
        <UiCode
          code={`<Title
  text="Заголовочный параграф, верхний регистр"
  as="p"
  size="h3"
  mods={['uppercase']}
/>`}
        />
      </div>
    </div>
  </section>
</UIKitLayout>
