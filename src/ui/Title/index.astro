---
import './Title.scss'

interface Props {
  text: string
  Tag?: 'h1' | 'h2' | 'h3' | 'p'
  className?: string
  mod?: ('white' | 'uppercase')[]
  size?: 'xl' | 'l' | 'm' | 's' | 'xs' | 'n'
}

const { text, Tag = 'h1', className, size, mod } = Astro.props
---
<Tag
  class:list={['title', className, size && `title--${size}`, mod?.map((el) => `title--${el}`)]}
>{ text }</Tag>
