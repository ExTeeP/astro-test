---
import './Button.scss'

interface Props {
  text: string
  type?: 'submit' | 'button' | 'reset'
  icon?: ImageMetadata
  className?: string
  mod?: ('fill')[]
  modal?: string
}

const { type = 'button', className, icon, text, mod, modal } = Astro.props
---

<button
  class:list={['button', className, mod?.map((el) => `button--${el}`)]}
  type={type}
  data-open-modal={modal}
>
  {icon &&
    <span class="button__icon">
      <Fragment set:html={icon} />
    </span>}
  <p class='button__text'>{text}</p>
</button>
